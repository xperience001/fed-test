{% extends "govuk/template.njk" %}

{% block head %}
  <!--[if !IE 8]><!-->
    <link href="stylesheets/style.css" rel="stylesheet">
  <!--<![endif]-->
{% endblock %}

{% block content %}
  <h1 class="govuk-heading-xl">Address lookup</h1>
  <div class="govuk-form-group">
    <form method="POST" action="/addresses">
      <label class="govuk-label" for="postcode">
        Enter a postcode
      </label>
        <input
          class="govuk-input govuk-input--width-10"
          id="postcode"
          name="postcode"
          type="text"
          pattern="[A-Za-z]{1,2}[0-9Rr][0-9A-Za-z]? [0-9][ABD-HJLNP-UW-Zabd-hjlnp-uw-z]{2}"
          title="Enter a valid UK postcode"
          required
        >
      <!-- Properly close the div tag here -->
    </div>
    <button class="govuk-button govuk-button--secondary" data-module="govuk-button" type="submit">
      Find address
    </button>
    </form>
  </div>
{% endblock %}

{% block bodyEnd %}
  <script src="javascripts/javascript.js"></script>
{% endblock %}
